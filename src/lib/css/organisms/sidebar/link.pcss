.sidebar-link {
  color: var(--white);
  display: block;
  font-size: 0.875rem;
  font-stretch: normal;
  font-style: normal;
  font-weight: 500;
  letter-spacing: -0.14px;
  line-height: 1.43;
  padding: 0.75rem 1.875rem;
  transition: background-color 0.3s;

  &:hover {
    background-color: var(--black-2);
    color: var(--white);
    text-decoration: none;
  }

  > img {
    margin-right: 0.5rem;
    width: 1.5rem;
  }
}
