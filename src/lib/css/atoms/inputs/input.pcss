.input-wrapper {
  position: relative;
}

.with_icon {
  .form-control {
    padding-right: 3rem;
  }
}

.form-control {
  height: calc(2.125em + .75rem + 2px);
  border-radius: 0;
  border-color: var(--very-light-pink);
  font-size: 0.875rem;
  color: var(--black-2);
  letter-spacing: -0.1px;

  &:focus {
    color: var(--black-2);
  }
}

.input-icon {
  position: absolute;
  color: var(--very-light-pink);
  top: 50%;
  right: 1rem;
  font-size: 1.25rem;
  transform: translate(0, -50%);
}

.input-error {
  font-size: 0.75rem;
  color: red;
}

.form-label {
  margin-bottom: 0;
  font-size: 0.75rem;
  font-weight: 500;
  line-height: 1.6;
  letter-spacing: 0.3px;
  text-transform: uppercase;
  color: var(--brown-grey);
}