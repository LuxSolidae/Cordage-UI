
.form-control {
  height: calc(2.125em + .75rem + 2px)
}

.input-wrapper {
  position: relative;
}

.with_icon {
  .form-control {
    padding-right: 3rem;
  }
}

.input-icon {
  position: absolute;
  color: #D3D3D3;
  top: 50%;
  right: 1rem;
  font-size: 1.25rem;
  transform: translate(0, -50%);
}

.input-error {
  font-size: 0.75rem;
  color: red;
}